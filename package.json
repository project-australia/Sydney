{
  "name": "sydney",
  "version": "0.0.0",
  "scripts": {
    "start": "DEBUG=sydney:* node -r dotenv/config ./src/server.js",
    "dev": "DEBUG=sydney:* nodemon -r dotenv/config ./src/server.js",
    "dev-win": "cross-env DEBUG=commonwealth:* nodemon --debug ./src/server.js --exec babel-node",
    "lint:check": "eslint ./src/ ./__tests__/",
    "lint:fix": "eslint --fix ./src/ ./__tests__/",
    "commitizen": "git cz",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest ./__tests__/unit/",
    "test:integration": "jest ./__tests__/integration/ --runInBand --forceExit",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "amazon-product-api": "^0.4.4",
    "bluebird": "^3.5.0",
    "body-parser": "~1.17.1",
    "debug": "~2.6.3",
    "dotenv": "4.0.0",
    "express": "^4.16.2",
    "express-validation": "^1.0.2",
    "firebase": "^4.8.1",
    "firebase-admin": "5.5.1",
    "git-last-commit": "^0.3.0",
    "helmet": "^3.8.1",
    "joi": "^13.1.1",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "mongoose": "^4.11.12",
    "morgan": "~1.8.1",
    "nodemailer": "^4.4.2",
    "opbeat": "^4.16.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.0",
    "babel-jest": "^21.0.2",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "commitizen": "^2.9.6",
    "cross-env": "^5.0.5",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^4.7.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-flowtype": "^2.35.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^21.1.0",
    "nodemon": "^1.12.1",
    "supertest": "^3.0.0",
    "prettier": "^1.10.2"
  },
  "engines": {
    "node": "8.9.1",
    "npm": "5.5.1"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "ignore": [
      "__test__/*"
    ],
    "delay": "2500"
  }
}
